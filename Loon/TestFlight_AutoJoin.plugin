#!name = TestFlight应用监控
#!desc = 自动监控TestFlight APP测试名额，并自动加入。
#!author = 润就完事了
#!homepage = https://github.com/lilei2603/tools/new/main/Loon
#!icon = https://raw.githubusercontent.com/lilei2603/tools/main/Icon/TestFlight.png
#!input = TF_APP_ID
#!date = 2023-12-25 16:05:00

[Rule]
DOMAIN, testflight.apple.com, PROXY

[Script]
http-request ^https?:\/\/testflight\.apple\.com\/v3\/accounts\/.*\/apps$ script-path = https://raw.githubusercontent.com/lilei2603/tools/main/Loon/TestFlight_AutoJoin.js, tag = 获取账号信息
http-request ^https://testflight.apple.com/join/(.*) script-path = https://raw.githubusercontent.com/lilei2603/tools/main/Loon/TestFlight_AutoJoin.js, tag = 获取APP_ID
cron "*/1 * * * * *" script-path = https://raw.githubusercontent.com/lilei2603/tools/main/Loon/TestFlight_AutoJoin.js, tag = 自动加入

[Mitm]
hostname = testflight.apple.com